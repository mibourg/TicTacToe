<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.michel.tictactoe.MainActivity">

    <TableLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/_00_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divider" />

            <Button
                android:id="@+id/_10_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divider" />

            <Button
                android:id="@+id/_20_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/_01_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divider" />

            <Button
                android:id="@+id/_11_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divider" />

            <Button
                android:id="@+id/_21_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/_02_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divider" />

            <Button
                android:id="@+id/_12_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divider" />

            <Button
                android:id="@+id/_22_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="64sp"
                android:onClick="onClickButton"
                android:background="@null"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/tv_player1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_one"
                android:textSize="16sp"
                android:textColor="@color/xPlayerNameColor"/>

            <TextView
                android:id="@+id/tv_player1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/xColor"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/tv_player2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_two"
                android:textSize="16sp"
                android:textColor="@color/oPlayerNameColor"/>

            <TextView
                android:id="@+id/tv_player2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/oColor"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
